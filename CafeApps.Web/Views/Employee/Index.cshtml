@model IEnumerable<CafeApps.Web.Models.Table>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2>All Table</h2>
<style>
    #Table {
        font-size: 25px;
        list-style-type: none;
    }
    #WholeTable {
        text-align: center;
        border-radius: 20px;
        display: block;
        border: 2px solid black;
        background: linear-gradient(to bottom, #33ccff 0%, #ff99cc 100%);
        width: 50%;
        padding: 70px;
        float: left;
        overflow: hidden;
       
    }
</style>

<div>
    @foreach (var item in Model)
    {<div id="WholeTable">

            <ul id="Table">
                <li>
                    @Html.DisplayFor(modelItem => item.TableName)
                </li>
                <li>
                    @Html.DisplayFor(modelItem => item.Status)
                </li>

            </ul>
            <div>
                @Html.ActionLink("Edit", "EditTabelStatus", new { id = item.TableId })
            </div>
        </div>
    }

</div>
