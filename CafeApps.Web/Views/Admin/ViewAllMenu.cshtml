@model IEnumerable<CafeApps.Web.Models.Menu>

@{
    ViewBag.Title = "ViewAllMenu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>View All Menu</h2>

@Html.ActionLink("Create New", "AddMenu")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {


    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.Image))
            {
                <img src="@Url.Content(item.Image)" width="250" height="250" />
            }

        </td>
        <td>
            @Html.ActionLink("Edit", "EditMenu", new { id = item.MenuId }) |
            @Html.ActionLink("Delete", "DeleteMenu", new { id = item.MenuId })
        </td>
    </tr>

    }
</table>
